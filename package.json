{
  "name": "client-side-react-server-boilerplate",
  "version": "1.0.0",
  "description": "Client side server react boilerplate implementation that includes jest, enzyme, lint, prettier, hot module reload, redux, router and etc. Feel free to fork it.",
  "main": "src/client/index.js",
  "private": true,
  "repository": {
    "type" : "git",
    "url" : "https://github.com/antonkalik/client-side-react-server-boilerplate.git"
  },
  "scripts": {
    "start": "npm run prod:build && node dist/server_bundle.js",
    "prod:build": "concurrently \"npm run prod:server\" \"npm run prod:client\"",
    "prod:server": "webpack --config ./webpack.server.js --mode production",
    "prod:client": "webpack --config ./webpack.client.js --mode production",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon ./src/server/index.js",
    "dev:client": "webpack-dev-server --mode development --config ./webpack.client.js --open",
    "test": "jest --config ./jest.config.js",
    "lint": "eslint ./src -c .eslintrc.json"
  },
  "author": "anton kalik",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-redux": "^7.1.1",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "concurrently": "^5.0.0",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.0",
    "nodemon": "^1.19.4",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0",
    "webpack-node-externals": "^1.7.2"
  }
}
